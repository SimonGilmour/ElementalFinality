        android:layout_height="wrap_content"
        android:layout_marginStart="404dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/cardSlot3"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/textDes4"
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:layout_marginStart="512dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/cardSlot4"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/totalDamagePlayed"
        android:layout_width="363dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toEndOf="@+id/tvBossHealth"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>